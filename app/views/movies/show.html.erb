<section class="movie-details">
  <div class="image">
    <%= image_tag @movie.image_file_name %>
    <% if current_user %>
      <div class="faves">
        <% if @favorite %>
            <%= button_to "♡ Unfave", movie_favorite_path(@movie, @favorite), method: :delete %>
        <% else %>
          <%= button_to "♥️ Fave", movie_favorites_path(@movie) %>
        <% end %>
        <div class="count">
          <%= @fans.size %>
        </div>
      </div>
    <% end %>
  </div>
 
  <div class="details">
    <h1><%= @movie.title %></h1>
    <h2>
      <%= year_of(@movie) %> &bull; <%= @movie.rating %>       
    </h2>
    <div class="reviews">
      <%= render "shared/stars", percent: @movie.average_stars_as_percent %>
      <%= link_to pluralize(@movie.reviews.size - 1, "review"), movie_reviews_path(@movie) %>
    </div>
    <p>
      <%= @movie.description %>
    </p>
    <table>
      <tr> 
        <th>Director:</th>
        <td><%= @movie.director %></td>
      </tr>
      <tr> 
        <th>Duration:</th>
        <td><%= @movie.duration %></td>
      </tr>
      <tr>
        <th>Total Gross:</th>
        <td><%= total_gross(@movie) %></td>
      </tr>
    </table>
    
    <div>
      <%= render 'reviews/form', movie: @movie, review: @review %>
    </div>
  </div>
  <aside>
    <% if @fans.present? %>
      <h4>Fans</h4>
        <ul>
          <% @fans.each do |user| %>
            <li>
              <%= profile_image(user, 35) %>
              <%= link_to name_or_username(user), user_path(user) %>             
            </li>
          <% end %>
        </ul>        
    <% end %>
  </aside>
</section>

<% if current_user_admin? %>
  <section class="admin">
    <%= link_to 'EDIT', edit_movie_path(@movie), class: "button" %>
    <%= link_to 'Delete movie', movie_path, class: "button",
          method: :Delete, data: {confirm: "Reallyyyy????"} %>
  </section>
<% end %>
